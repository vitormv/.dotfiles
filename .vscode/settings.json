{
  "[properties]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.autoIndent": "none",
  },
  "files.associations": {
    "*.conf": "properties",
    "**/home/.*.dotfiles": "shellscript",
    "**/home/.bash*": "shellscript",
    "**/home/.zsh_*": "shellscript",
  },
  "shellformat.effectLanguages": [
    "dockerfile",
    "dotenv",
    "hosts",
    "jvmoptions",
    "ignore",
    "gitignore",
    "shellscript",
    "spring-boot-properties",
    "azcli",
    "bats"
  ],
  "editor.fontFamily": "'MesloLGM Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "shellcheck.useWorkspaceRootAsCwd": true,
}
